@{
    ViewData["Title"] = "Home Page";
}
@using CarDealership.DataAccess.Models;
@model List<Car>
<h2>Car's information</h2>
<form asp-controller="Car" asp-action="Index" method="get">
    <p>
        <input type="text" name="query" value="@Context.Request.Query["query"]" />
        <input type="submit" value="Search" />
    </p>
</form>
<a href="/Car/Add/">+ Add car</a>
<table>
    <tr>
        <th>No.</th>
        <th>Car Manufacturer</th>
        <th>Ngan Luong</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td id="test">@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price.ToString("N0") $</td>
            <td><a href="/Car/Delete/@item.Id" onclick="return confirm('Are you sure you wish to delete this shit ?');">Delete</a></td>
            <td><a href="/Car/Update/@item.Id">Edit</a></td>
        </tr>
    }
</table>
<br />


